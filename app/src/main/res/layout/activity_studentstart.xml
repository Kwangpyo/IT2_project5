<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.it2_project.Studentstart">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout_s"
        android:text="LOG OUT"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="Student"
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:id="@+id/textview_s"/>

    <Button
        android:id="@+id/survey"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_s"
        android:text="SURVEY START"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SOS"
        android:text="SOS"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/survey"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singo"
        android:text="DECLARATION"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/SOS"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/consult"
        android:text="CONSULTING"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/singo"/>


</RelativeLayout>
